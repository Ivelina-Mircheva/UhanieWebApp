<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
@model UhanieWebApp.Data.Flower

@{
    ViewData["Title"] = "Details";
}

<h1>Детайли</h1>

<div>
    <h4>Цветя</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.BulgarianName)*@
            Българско наименование
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BulgarianName)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.LatinName)*@
            Латинско наименование
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LatinName)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Size)*@
            Размер
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size) см.
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Description)*@
            Характеристики
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.ImageURL)*@
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageURL)" height="300" />
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Price)*@
            Цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price) лв.
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegisterOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegisterOn)
        </dd>
    </dl>
</div>
<div style="font-size:1.5em">
    <a style="text-decoration:none;" asp-action="Index" class="fas">&#xf3e5;</a> |
    <a style="text-decoration:none;" asp-action="Edit" asp-route-id="@Model?.Id" class="far">&#xf044;</a> |
    <a style="text-decoration:none;" asp-controller="OrderFlowers" asp-action="Create" asp-route-id="@Model?.Id" class="fas">&#xf217;</a>
</div>
