<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
@model UhanieWebApp.Data.Bouquet

@{
    ViewData["Title"] = "Details";
}

<h1>Детайли</h1>

<div>
    <h4>Букети и аранжировки</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Name)*@
            Име
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Type)*@
            Вид на артикула
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Description)*@
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Снимка
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageURL)" height="300"/>
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Price)*@
            Цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegisterOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegisterOn)
        </dd>
    </dl>
</div>
<div style="font-size:1.5em">
    <a style="text-decoration:none;" asp-action="Index" class="fas">&#xf3e5;</a> |
    <a style="text-decoration:none;" asp-action="Edit" asp-route-id="@Model?.Id" class="far">&#xf044;</a> |
    <a style="text-decoration:none;" asp-controller="OrderBouquets" asp-action="Create" asp-route-id="@Model?.Id" class="fas">&#xf217;</a>
</div>
